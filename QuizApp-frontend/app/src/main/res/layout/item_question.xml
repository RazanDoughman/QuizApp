<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Question Title -->
            <TextView
                android:id="@+id/questionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question No. 1"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <!-- Question Name -->
            <EditText
                android:id="@+id/questionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your question here"
                android:background="@drawable/rounded_edittext_background1"
                android:padding="8dp"
                android:layout_marginBottom="12dp" />

            <!-- Question Answers -->
            <EditText
                android:id="@+id/answerOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 1"
                android:background="@drawable/rounded_edittext_background1"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/answerOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 2"
                android:background="@drawable/rounded_edittext_background1"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/answerOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 3"
                android:background="@drawable/rounded_edittext_background1"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/answerOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 4"
                android:background="@drawable/rounded_edittext_background1"
                android:padding="8dp"
                android:layout_marginBottom="12dp" />

            <!-- Correct Answer Dropdown -->
            <Spinner
                android:id="@+id/correctAnswerSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_background1"
                android:padding="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
